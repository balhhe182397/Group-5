<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Payment Management</h2>
        <div>
            <a href="/borrows" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Borrows
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Pending Payments</h5>
                    <h2 class="mb-0">
                        <%= payments.filter(p => p.payment_status === 'pending').length %>
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Paid</h5>
                    <h2 class="mb-0">
                        <%= payments.filter(p => p.payment_status === 'paid').length %>
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Rejected</h5>
                    <h2 class="mb-0">
                        <%= payments.filter(p => p.payment_status === 'cancelled').length %>
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Book</th>
                            <th>Amount</th>
                            <th>Payment Date</th>
                            <th>Status</th>
                            <th>Confirmed By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (payments.length > 0) { %>
                            <% payments.forEach(payment => { %>
                                <tr>
                                    <td><%= payment.id %></td>
                                    <td>
                                        <div><%= payment.full_name %></div>
                                        <small class="text-muted"><%= payment.email %></small>
                                    </td>
                                    <td><%= payment.title %></td>
                                    <td class="text-danger fw-bold">
                                        <%= payment.current_fine.toLocaleString('vi-VN') %> VND
                                    </td>
                                    <td>
                                        <%= payment.payment_date ? new Date(payment.payment_date).toLocaleString() : '-' %>
                                    </td>
                                    <td>
                                        <% if (payment.payment_status === 'pending') { %>
                                            <span class="badge bg-warning">Pending</span>
                                        <% } else if (payment.payment_status === 'paid') { %>
                                            <span class="badge bg-success">Paid</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Rejected</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <%= payment.approver_name || '-' %>
                                    </td>
                                    <td>
                                        <% if (payment.payment_status === 'pending') { %>
                                            <button class="btn btn-success btn-sm" 
                                                    onclick="confirmPayment(<%= payment.id %>)">
                                                <i class="fas fa-check me-1"></i>Confirm
                                            </button>
                                            <button class="btn btn-danger btn-sm" 
                                                    onclick="rejectPayment(<%= payment.id %>)">
                                                <i class="fas fa-times me-1"></i>Reject
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-info btn-sm" 
                                                    onclick="viewDetails(<%= payment.id %>)">
                                                <i class="fas fa-eye me-1"></i>View
                                            </button>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle me-2"></i>No payments found
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Payment Details Modal -->
<div class="modal fade" id="paymentDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Payment Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="paymentDetails"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
function confirmPayment(paymentId) {
    if (confirm('Are you sure you want to confirm this payment?')) {
        fetch(`/borrows/approve-payment/${paymentId}`, {
            method: 'POST'
        })
        .then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                alert('Error confirming payment');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error confirming payment');
        });
    }
}

function rejectPayment(paymentId) {
    if (confirm('Are you sure you want to reject this payment?')) {
        fetch(`/borrows/reject-payment/${paymentId}`, {
            method: 'POST'
        })
        .then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                alert('Error rejecting payment');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error rejecting payment');
        });
    }
}

function viewDetails(paymentId) {
    fetch(`/borrows/payment/${paymentId}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const payment = data.data;
                const detailsHtml = `
                    <div class="mb-3">
                        <h6>User Information</h6>
                        <p><strong>Name:</strong> ${payment.full_name}</p>
                        <p><strong>Email:</strong> ${payment.email}</p>
                    </div>
                    <div class="mb-3">
                        <h6>Payment Information</h6>
                        <p><strong>Book:</strong> ${payment.title}</p>
                        <p><strong>Amount:</strong> ${payment.fine_amount.toLocaleString('vi-VN')} VND</p>
                        <p><strong>Status:</strong> ${payment.payment_status}</p>
                        <p><strong>Payment Date:</strong> ${new Date(payment.payment_date).toLocaleString()}</p>
                    </div>
                `;
                document.getElementById('paymentDetails').innerHTML = detailsHtml;
                new bootstrap.Modal(document.getElementById('paymentDetailsModal')).show();
            } else {
                alert('Error loading payment details');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error loading payment details');
        });
}
</script> 