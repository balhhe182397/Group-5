<div class="container">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Books</h2>
        </div>
        <div class="col-md-4">
            <form action="/books" method="GET" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Search books..." value="<%= search || '' %>">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>

    <% if (user && (user.role === 'admin' || user.role === 'librarian')) { %>
        <div class="row mb-4">
            <div class="col-12">
                <a href="/books/add" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Book
                </a>
            </div>
        </div>
    <% } %>

    <div class="row">
        <% if (books && books.length > 0) { %>
            <% books.forEach(book => { %>
                <div class="col-md-4 mb-4">
                    <div class="card book-card">
                        <div class="card-body">
                            <h5 class="card-title"><%= book.title %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">By <%= book.author %></h6>
                            <p class="card-text">
                                <small class="text-muted">
                                    ISBN: <%= book.isbn %><br>
                                    Category: <%= book.category %><br>
                                    Available: <%= book.available_quantity %>
                                </small>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge <%= book.available_quantity > 0 ? 'bg-success' : 'bg-danger' %>">
                                    <%= book.available_quantity > 0 ? 'Available' : 'Not Available' %>
                                </span>
                                <div>
                                    <% if (user && book.available_quantity > 0) { %>
                                        <a href="/borrows/borrow/<%= book.id %>" class="btn btn-primary btn-sm">
                                            <i class="fas fa-bookmark me-1"></i> Borrow
                                        </a>
                                    <% } %>
                                    <% if (user && (user.role === 'admin' || user.role === 'librarian')) { %>
                                        <a href="/books/edit/<%= book.id %>" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        <a href="/books/delete/<%= book.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?')">
                                            <i class="fas fa-trash me-1"></i> Delete
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> No books found. Try a different search term or add some books.
                </div>
            </div>
        <% } %>
    </div>
</div> 