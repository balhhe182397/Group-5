    padding: 1.5rem;
}

.card-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 0.5rem;
}

.card-subtitle {
    font-size: 0.9rem;
    color: #7f8c8d;
}

.book-details {
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    padding: 0.75rem 0;
}

.card-text small {
    line-height: 1.6;
    color: #34495e;
    font-size: 0.85rem;
}

.badge {
    padding: 0.5em 1em;
    font-weight: 500;
    font-size: 0.8rem;
    border-radius: 6px;
}

.btn-primary {
    padding: 0.375rem 0.75rem;
    font-size: 0.9rem;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.btn-warning, .btn-danger {
    padding: 0.5em 1em;
    font-weight: 500;
    border-radius: 6px;
    transition: all 0.3s ease;
}

.btn-warning:hover, .btn-danger:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.alert {
    border: none;
    border-radius: 12px;
    padding: 1.5rem;
}

.alert-info {
    background-color: #e8f4fd;
    color: #2c3e50;
}

/* Search and Filter Styles */
.input-group-text {
    background-color: #f8f9fa;
    border-right: none;
    border-radius: 6px 0 0 6px;
    padding: 0.375rem 0.75rem;
}

.input-group .form-control {
    border-left: none;
    border-radius: 0 6px 6px 0;
    padding: 0.375rem 0.75rem;
    font-size: 0.9rem;
}

.input-group .form-control:focus {
    border-color: #ced4da;
    box-shadow: none;
}

.form-select {
    border-radius: 6px;
    padding: 0.375rem 0.75rem;
    font-size: 0.9rem;
}

.form-select:focus {
    border-color: #ced4da;
    box-shadow: none;
}

.btn-group {
    gap: 0.5rem;
}

.btn-group .btn {
    border-radius: 6px !important;
}

/* Custom: Make action buttons smaller and fit card */
.book-card .btn-group .btn {
    font-size: 0.75rem;
    padding: 0.1rem 0.3rem;
    min-width: 40px;
    min-height: 22px;
    line-height: 1;
}

.book-card .btn-group {
    gap: 0.15rem;
}

@media (max-width: 768px) {
    .book-card .btn-group .btn {
        font-size: 0.7rem;
        min-width: 32px;
        min-height: 18px;
        padding: 0.08rem 0.18rem;
    }
}
</style>

<script>
function deleteBook(bookId) {
    // Kiá»m tra tráº¡ng thÃ¡i sÃ¡ch trÆ°á»c khi xÃ³a
    fetch(`/books/check-delete/${bookId}`)
    .then(response => response.json())
    .then(data => {
        console.log('Check delete result:', data);
        
        if (!data.canDelete) {
            // Show detailed message
            alert(data.message);
            return;
        }
        
        // If can delete, ask for confirmation
        if (confirm(data.message + '\n\nAre you sure you want to delete this book?')) {
            console.log('Attempting to delete book with ID:', bookId);
            
            // Táº¡o form data Äá» gá»­i POST request
            const formData = new FormData();
            
            fetch(`/books/delete/${bookId}`, {
                method: 'POST',
                body: formData
            }).then(response => {
                console.log('Response status:', response.status);
                console.log('Response ok:', response.ok);
                
                if (response.ok) {
                    console.log('Book deleted successfully');
                    window.location.reload();
                } else {
                    console.log('Error response received');
                    alert('Error deleting book. Status: ' + response.status);
                }
            }).catch(error => {
                console.error('Fetch error:', error);
                alert('Error deleting book: ' + error.message);
            });
        }
    }).catch(error => {
        console.error('Error checking book status:', error);
        alert('Error checking book status: ' + error.message);
    });
}
</script>

