<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>User Profile</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="avatar-placeholder mb-3">
                                <i class="fas fa-user-circle fa-5x text-primary"></i>
                            </div>
                            <h4><%= user.full_name %></h4>
                            <span class="badge <%= user.role === 'admin' ? 'bg-danger' : user.role === 'librarian' ? 'bg-warning' : user.role === 'student' ? 'bg-primary' : 'bg-info' %>">
                                <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                            </span>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label text-muted">Username</label>
                                <p class="form-control-plaintext"><%= user.username %></p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">Email</label>
                                <p class="form-control-plaintext"><%= user.email %></p>
                            </div>
                            <% if (user.role === 'student') { %>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Student ID</label>
                                    <p class="form-control-plaintext"><%= user.student_id %></p>
                                </div>
                            <% } else if (user.role === 'lecturer') { %>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Lecturer ID</label>
                                    <p class="form-control-plaintext"><%= user.lecturer_id %></p>
                                </div>
                            <% } %>
                            <div class="mb-3">
                                <label class="form-label text-muted">Member Since</label>
                                <p class="form-control-plaintext"><%= new Date(user.created_at).toLocaleDateString() %></p>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="/borrows/my-borrows" class="btn btn-primary">
                                    <i class="fas fa-book me-2"></i>My Borrows
                                </a>
                                <a href="/books" class="btn btn-success">
                                    <i class="fas fa-search me-2"></i>Browse Books
                                </a>
                                <a href="/users/change-password" class="btn btn-warning">
                                    <i class="fas fa-key me-2"></i>Change Password
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 